version: "3"

services:
  cachet:
    build:
      context: .
      args:
        - cachet_ver=2.4
    ports:
      - 80:8000
    environment:
      - DB_DRIVER=pgsql
      - DB_HOST={{ db_host | default('postgres') }}
      - DB_PORT=5432
      - DB_DATABASE={{ db_database | default('postgres') }}
      - DB_USERNAME={{ db_username | default('postgres') }}
      - DB_PASSWORD={{ db_password | default('postgres') }}
      - DB_PREFIX=chq_

      - APP_DEBUG=false
      - DEBUG=false
    restart: on-failure

{% if db_host is not defined %}

    links:
      - postgres:postgres
    depends_on:
      - postgres

  postgres:
    image: postgres:9.5
    volumes:
      - /var/lib/postgresql/data
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
    restart: always

{% endif %}